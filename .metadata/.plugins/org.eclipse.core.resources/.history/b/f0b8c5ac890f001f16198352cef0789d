public class Practice {

	public static void main(String[] args) {
		isPallandrom(12121);
		isPallandrom(1234);
		
		
	}
	public static void isPallandrom(int num) {
		int r =0;
		int sum =0;
		int t = num;
		while(num>0) {
			r=num%10;
			sum=(sum*10)+r;
			num = num/10;
		}
		if(t==sum) {
			System.out.println(t + " is a pallandrom");
		}
		else {
			System.out.println(t + " is not pallandrom");
		}
	}
	
		}

